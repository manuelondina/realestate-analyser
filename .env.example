# Real Estate Analyser Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL (Render provides this automatically)
DATABASE_URL=jdbc:postgresql://localhost:5432/realestate_db

# Database credentials
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password

# =============================================================================
# JPA/HIBERNATE CONFIGURATION
# =============================================================================
# Database schema management (create, create-drop, update, validate, none)
# Use 'update' for production, 'create-drop' for development
DDL_AUTO=update

# Show SQL queries in logs (true for development, false for production)
SHOW_SQL=false

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# OpenAI API Key for AI-powered features
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port (Render will override this with PORT environment variable)
PORT=8080

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level for your application (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# RENDER DEPLOYMENT SPECIFIC
# =============================================================================
# Environment indicator (development, staging, production)
SPRING_PROFILES_ACTIVE=production